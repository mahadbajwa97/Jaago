        .five
        {
            width: 15%;
            background-color: purple;
            height: 100px;
        }

        .six
        {
            width: 15%;
            background-color:yellow;
            height: 100px;
        }
        .seven
        {
            width: 30.6%;
            background-color: purple;
            height: 100px;
        }
        .eight
        {
            width: 30.6%;
            background-color: brown;
            height: 100px;
        }
        .nine
        {
            width: 30.6%;
            background-color: brown;
            height: 100px;
        }
        .ten
        {
            width: 30.6%;
            background-color: green;
            height: 100px;
        }
        .eleven
        {
            width: 15%;
            background-color :yellow;
            height: 100px;
        }
        .twelve
        {
            width: 15%;
            background-color: green;
            height: 100px;
        }
        .thirteen
        {
            width: 30.6%;
            background-color: green;
            height: 100px;
        }
        .fourteen
        {
            width: 30.6%;
            background-color: lightblue;
            height: 100px;
        }
        .fifteen
        {
            width: 15%;
            background-color: lightpink;
            height: 100px;
        }
        .sixteen
        {
            width: 15%;
            background-color: green;
            height: 100px;
        }
        .user
        {

            margin-left: 5%;
            margin-top: 1%;
            font-size: 25px;
        }

        .user div       {
            color: aliceblue;
            float: left;
            padding: 5%;
            box-sizing: border-box;
            margin: 0;
        }
        .user .Name       {
            color: aliceblue;
            float: left;
            padding-top: 10%;
            box-sizing: border-box;
            margin: 0;
            padding-left: 0;
        }
        p, a
        {
            color: aliceblue;
            padding: 5%;
            box-sizing: border-box;
            margin: 0;
            width:100%;
        }
        .clear
        {
            clear: left;
        }

    </style>
</head>
<body>
<div class="user">
    <div><img src="/<%=User[0].Image%>" width="150px" height="150px" style="border-radius:50% "></div>
    <div class="Name"><%= User[0].FullName %></div>
</div>
<div class="clear"></div>
<div class="container">
    <div class="first one">

        <p><i class="fab fa-blogger-b"></i>Blog</p>
    </div>
    <div class="first two">
        <p><a href="/Home"><i class="fas fa-home"></i>Home</a></p>

    </div>
    <div class="first three">
        <p><i class="fas fa-id-card"></i> User Profile</p>

