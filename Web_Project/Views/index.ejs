            </a>

            <!--  Blog Index  -->
            <% Blogs.forEach(function(Blog){ %>


            <a href="/article/<%=Blog._id%>">
                <div class="blog-card spring-fever" style="background-image: url('<%=Blog.image%>'); background-repeat: repeat">

