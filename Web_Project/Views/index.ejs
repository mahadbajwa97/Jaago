                        <h3><%= Blog.title%></h3>
                        <hr />

                    </div><!-- /.title-content -->
                    <div class="card-info">
                        <%= Blog.intro%>
                    </div><!-- /.card-info -->
                    <div class="utility-info">
                        <ul class="utility-list">
                            <li class="comments"><%=Blog.Comments.length%></li>
                            <li class="date"><%=Blog.Created%></li>
                        </ul>
                    </div><!-- /.utility-info -->
                    <!-- overlays -->
                    <div class="gradient-overlay"></div>
                    <div class="color-overlay"></div>

